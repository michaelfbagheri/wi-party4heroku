<!--   Body Section   -->
<div class="container">
    <div class="row mb-5">
        <a href="/" class="btn btn-success">Go Back</a>
    </div>


    <div class="container party-wrapper">
        <div class="row">
            <div class="h1bkgrd">
                <h1>{{data.eventName}}</h1>
            </div>
        </div>

        <div class="row">

            <div class="col-md-3 imgstyle">
                <img src="../img/danceOff.jpg">
                <button id="confirm-attendance" class="btn-two green small">Confirm Attendance</button>
                <div class="attendance-bkgrd">
                    <h5>Attendees</h5>
                    <ol>
                        {{#each Attendees}}
                        <li>{{displayName}}</li>
                        {{/each}}
                    </ol>
                </div>
                <p>{{> (lookup . 'partial') partyId=party.id }}</p>
            </div>
            <div class="col-md-9 party-description">
                {{#each PartyData}}
                <i class="far fa-clock"></i> <span class="time-space">{{eventTime}} | {{eventDate}}</span>
                <h1>{{eventName}}</h1>
                <p>{{eventAddress}}</p>
                <hr>
                <p class="p-description">{{eventDescription}}</p>
                {{/each}}
                <div class="submit-items">
                    <p>Please input your items and quantity you are bringing to the party</p>
                    <form class="items-to-bring">
                        <input type="text" class="form-control" placeholder="item name" id="item-name">
                        <input type="text" class="form-control" placeholder="item qty" id="item-qty">
                        <button type="submit" class="btn-two cyan small">submit</button>
                    </form>
                </div>

                <div class="row">
                    <div class="col-md-6 responsive-table">
                        <p>Items To Bring</p>
                        <table class="striped">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Qty</th>
                                    <th>Add Items</th>
                                </tr>
                            </thead>
                            <tbody class="responsive-table-body-req">


                                {{#each Attendees}}
                                {{#each Items}}
                                {{#if satisfied}}
                                <tr>
                                    <td>{{itemName}}</td>
                                    <td>{{qtyRequested}}</td>
                                    <td class="btn-floating"> <a class="btn-small waves-effect waves-light green"><i
                                                class="fas fa-plus-circle" value={{id}}></i></a></td>
                                </tr>
                                {{/if}}
                                {{/each}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6 responsive-table">
                        <p>Being Brought by Guests</p>
                        <table class="striped">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Qty</th>
                                </tr>
                            </thead>
                            <tbody class="responsive-table-body-res">
                                {{#each Attendees}}
                                {{#each Items}}
                                {{#if qtyCommited}}
                                <tr>
                                    <td>{{itemName}}</td>
                                    <td>{{qtyCommited}}</td>
                                </tr>
                                {{/if}}
                                {{/each}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
